create table Person(
                       id int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY ,
                       username varchar(100) NOT NULL ,
                       email varchar(100) UNIQUE NOT NULL ,
                       password varchar NOT NULL,
                       role varchar NOT NULL
);

